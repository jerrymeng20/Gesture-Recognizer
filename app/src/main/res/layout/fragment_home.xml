<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment"
        android:id="@+id/bg">

    <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/match_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:background="@drawable/roundcorner"
         />

    <ImageButton
        android:id="@+id/match_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="120dp"
        android:layout_toLeftOf="@+id/match_3"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:background="@drawable/roundcorner"
        />

    <ImageButton
        android:id="@+id/match_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="120dp"
        android:layout_toLeftOf="@+id/match_2"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:background="@drawable/roundcorner"
        />

    <TextView
        android:id="@+id/name_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/name_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:layout_toLeftOf="@+id/name_3"
        android:visibility="invisible"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/name_1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:layout_toLeftOf="@+id/name_2"
        android:visibility="invisible"
        android:textSize="20dp"
        />

</RelativeLayout>